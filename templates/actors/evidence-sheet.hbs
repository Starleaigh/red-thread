<div class="evidence-sheet flexcol">

  <header class="sheet-header flexrow">
    <img src="{{actor.img}}" width="64" height="64">

    <h1>
      <input
        id="evidence-text"
        name="text"
        type="text"
        data-field="text"
        value="{{system.text}}"
        {{#unless isLockOwner}}disabled{{/unless}}
      >
    </h1>
  </header>

  <section class="sheet-body">
    <textarea
      id="evidence-description"
      name="description"
      data-field="description"
      {{#unless isLockOwner}}disabled{{/unless}}
    >{{system.description}}</textarea>
  </section>

  <footer class="sheet-footer flexrow">

    {{#if isLockOwner}}
      <button type="button" data-action="submit">
        Submit
      </button>

    {{else if isLocked}}
      <button type="button" disabled>
        Claimed by {{lockUser}}
      </button>

    {{else}}
      <button type="button" data-action="edit">
        Edit
      </button>
    {{/if}}

  </footer>

</div>